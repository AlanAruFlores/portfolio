---
    import CarrouselItem from "../components/carrousel_item.astro"


    interface Item{
        url: string,
        name: string
    };

    export interface Props {
        title: string,
        array: Array<Item>
    }

    const {title,array} = Astro.props;
---

<h2 class="text-blue-custom text-3xl text-center">{title}</h2>
<!-- Carrousel para lenguajes de programacion-->
{array.length>=3 &&
    <div class="swiper w-full">
        <div class="swiper-wrapper flex items-center py-10">
            <!-- Los slides -->
            {array.map(x=>{
                return <CarrouselItem url={x.url}/>
            })}
        </div>
        <!-- Botones de navegaciÃ³n -->
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
    </div>
}


{array.length<3 &&
    <div class="flex items-center justify-center w-full">
        <div class="py-10 flex gap-4">
            <!-- Los slides -->
            {array.map(x=>{
                return <div class="">
                    <img src={x.url} class="w-20 md:w-32 lg:w-36" alt="language" />
                </div>
            })}
        </div>
    </div>
}