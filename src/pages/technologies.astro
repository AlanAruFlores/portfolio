--- 
    import Carrousel from "../components/carrousel.astro";
    import LineCarrousel from "../components/line_carrousel.astro";

    const programmingLanguagesImages=[
        "/public/img/languages/html-5.svg",
        "/public/img/languages/css.svg",
        "/public/img/languages/javascript.svg",
        "/public/img/languages/java.svg",
        "/public/img/languages/php.svg"
    ];

    const databasesImages = [
    "/public/img/languages/mysql.svg"
    ];

    const frameworksImages=[
        "/public/img/languages/spring_boot.png",
        "/public/img/languages/spring.svg",
        "/public/img/languages/hibernate.svg",
        "/public/img/languages/jpa.png",
        "/public/img/languages/spring_security.png",
        "/public/img/languages/thymeleaf.svg",
        "/public/img/languages/angular.svg",
        "/public/img/languages/bootstrap.svg",
        "/public/img/languages/astro.svg",
        "/public/img/languages/tailwind.svg"
    ];

    const toolsImages=[
        "/public/img/tools/git.svg",
        "/public/img/tools/eclipse-icon.svg",
        "/public/img/tools/intellij-idea.svg",
        "/public/img/tools/visual-studio-code.svg",
        "/public/img/tools/postman-icon.svg"
    ]
---
<div class="section w-full h-[500px]">
    <div class="w-[80%] max-w-[900px] mx-auto">
        <h1 class="w-[80%] max-w-[900px] mx-auto text-4xl mb-6 text-center lg:text-5xl  text-shadow text-blue-custom [text-shadow:_0_0px_10px_rgb(93_247_255/_100%)]  font-bold">&lt;Tecnologias/&gt;</h1>  
        <!-- Modo mobile -->
        <div class="md:hidden">
            <Carrousel title={"Lenguajes"} array={programmingLanguagesImages}/>
            <LineCarrousel/>
    
            <Carrousel title={"Bases de Datos"} array={databasesImages}/>
            <LineCarrousel/>
    
            <Carrousel title={"Frameworks"} array={frameworksImages}/>
            <LineCarrousel/>
        
            <Carrousel title={"Herramientas"} array={toolsImages}/>
        </div>     
        <div class="grid_technologies w-full h-[750px]">
            <div class="grid_frameworks bg-gray-950 shadow-custom-light-blue">
                <h2 class="text-blue-custom text-3xl px-4 py-2 [text-shadow:_0_0px_10px_rgb(93_247_255/_100%)]">Frameworks</h2>
                <div class="flex flex-row justify-center flex-wrap p-4 gap-14">

                    {frameworksImages.map(x=>
                        <img src={x} class="w-[40px] h-[40px] lg:w-[60px] lg:h-[60px]">)}
               
                </div>
            </div>
            <div class="grid_databases bg-gray-950 shadow-custom-light-blue">
                <h2 class="text-blue-custom text-3xl px-4 py-2 [text-shadow:_0_0px_10px_rgb(93_247_255/_100%)]">Bases de datos</h2>
                <div class="flex flex-row justify-center flex-wrap p-4 gap-14">

                {databasesImages.map(x=>
                    <img src={x} class="w-[40px] h-[40px] lg:w-[60px] lg:h-[60px]">)}

                </div>
            </div>
            <div class="grid_languages bg-gray-950 shadow-custom-light-blue">
                <h2 class="text-blue-custom text-3xl px-4 py-2 [text-shadow:_0_0px_10px_rgb(93_247_255/_100%)] ">Lenguajes</h2>

                <div class="flex flex-row justify- flex-wrap p-4 gap-12">
                    {programmingLanguagesImages.map(x=>
                        <img src={x} class="w-[40px] h-[40px] lg:w-[60px] lg:h-[60px]">)}
                </div>
            </div>
            <div class="grid_tools bg-gray-950 shadow-custom-light-blue">
                <h2 class="text-blue-custom text-3xl px-4 py-2 [text-shadow:_0_0px_10px_rgb(93_247_255/_100%)]">Herramientas</h2>

                <div class="flex flex-row justify-around flex-wrap p-4 gap-10">
                    {toolsImages.map(x=>
                        <img src={x} class="w-[40px] h-[40px] lg:w-[60px] lg:h-[60px]">)}
                </div>
            </div>
        </div>
    </div>
</div>

<script src="../../public/js/swiper.js"></script>